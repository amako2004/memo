<Window x:Class="memo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:memo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="TxtMain" HorizontalAlignment="Left" Height="219" Margin="0,200,0,0" VerticalAlignment="Top" Width="792">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="OpenFolderButton" Content="open" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="OpenFolderButton_Click" Height="22"/>
        <TextBox x:Name="SelectionResult" HorizontalAlignment="Left" Height="22" Margin="80,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="185"/>

    </Grid>
</Window>
